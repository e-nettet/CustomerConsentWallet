{{outlet}}
<div class="row">
  <div class="col-md-4">
    <h2>MyWallet</h2>
    <p>Your balance is {{balance}}</p>

    <h3>Addresses</h3>
    <ul>
    {{#each addresses as |address|}}
      <li>{{address}}</li>
    {{/each}}
    </ul>

    <button {{action "sendGreeting"}} class="btn btn-success btn-xs">
      Send greeting
    </button>
    <p>{{greeting}}</p>

    <h3>Consent requests</h3>
    <ul>
      {{#each consents as |consent|}}
        <li>{{consent}}</li>
      {{/each}}
    </ul>    
  </div>
</div>
