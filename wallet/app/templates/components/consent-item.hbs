<li class="list-group-item">
  <table class="table table-striped">
    <tr>
      <td>
        <dl class="dl-horizontal">
          <dt>ID</dt>
          <dd>{{consent.id}}</dd>
          <dt>Customer</dt>
          <dd>{{consent.customer}}</dd>
          <dt>From</dt>
          <dd>{{consent.requester}}</dd>
          <dt>State</dt>
          <dd class="state">{{consent.getState}}</dd>
        </dl>
      </td>
      <td>
        {{#if (eq consent.getState 'REQUESTED')}}
          <span class="pull-right">
            {{async-button class="btn btn-sm btn-success acceptConsent" action=(action 'acceptConsent' consent) default="Accept" pending="Accepting..." fulfilled="Accepted"}}
            {{async-button class="btn btn-sm btn-warning rejectConsent" action=(action 'rejectConsent' consent) default="Reject" pending="Rejecting..." fulfilled="Rejected"}}
          </span>
        {{/if}}
      </td>
    </tr>
  </table>
</li>
