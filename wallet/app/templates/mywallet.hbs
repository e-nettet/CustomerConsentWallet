<div class="page-header">
  <h1>MyWallet</h1>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Your balances are:</h3>
      </div>
      <div class="panel-body">
        {{#each addressesAndBalances as |addressAndBalance|}}
          {{addressAndBalance.address}}: {{addressAndBalance.balance}}<br />
        {{/each}}
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Addresses</h3>
      </div>

      <div class="panel-body">
        <ul>
          {{#each addresses as |address|}}
            <li>{{address}}</li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Consent requests</h3>
      </div>

      <div class="panel-body">

        {{#if eventError}}
          <div class="alert alert-danger">{{eventError}}</div>
        {{/if}}

        <ul class="list-group">
          {{#each contractEvents as |event|}}
          <li class="list-group-item">
            From: {{event.args.data_requester}}, id: {{event.args.id}}
            <span class="pull-right">
              <button type="button" class="btn btn-sm btn-success" {{action 'accept' event}}>Accept</button>
              <button type="button" class="btn btn-sm btn-warning" {{action 'reject' event}}>Reject</button>
            </span>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
